{
  "private": true,
  "scripts": {
    "start": "vite",
    "build": "vite build",
    "test": "jest",
    "test:w": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "dependencies": {
    "@nanostores/vue": "0.5.0",
    "nanostores": "0.5.7",
    "vue": "3.2.24"
  },
  "devDependencies": {
    "@testing-library/vue": "6.5.0",
    "@vitejs/plugin-vue": "1.10.2",
    "@vue/compiler-sfc": "3.2.24",
    "@vue/test-utils": "2.0.0-rc.17",
    "babel-jest": "27.4.2",
    "esbuild": "0.14.2",
    "esbuild-jest": "0.5.0",
    "eslint": "8.4.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.4.3",
    "prettier": "2.5.1",
    "sass": "1.44.0",
    "ts-jest": "27.1.1",
    "typescript": "4.5.2",
    "vite": "2.7.1",
    "vite-plugin-windicss": "1.5.4",
    "vue3-jest": "27.0.0-alpha.2",
    "windicss": "3.2.1"
  },
  "jest": {
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": [
        "esbuild-jest",
        {
          "sourcemap": true,
          "loaders": {
            ".spec.ts": "tsx"
          }
        }
      ],
      ".*\\.vue$": "vue3-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!nanostores|@nanostores)"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/style-mock.js",
      "shared/(.*)": "<rootDir>/src/shared/$1",
      "^features/(.*)": "<rootDir>/src/features/$1"
    }
  }
}
